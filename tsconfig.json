{
  "include": [
    "src",
    "esbuild.config.*js",
    "esbuild.config.ts"
  ],
  "exclude": [
    "node_modules",
  ],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./bin",
    "lib": [
      "es2021"
    ],
    "module": "ES6",
    "target": "ES6",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}