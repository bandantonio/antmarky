{
  "name": "antmarky",
  "version": "0.10.0",
  "description": "Antmarky is a static-site generator for Markdown based on Node.js/EJS",
  "main": "server.js",
  "scripts": {
    "build": "node src/commands/build.js",
    "serve": "node server.js",
    "lint": "semistandard",
    "test": "jest",
    "bump": "node bump-version.js",
    "changelog": "auto-changelog --handlebars-setup .changelog/helper.js --template .changelog/changelog-template.hbs --commit-limit false"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "coveragePathIgnorePatterns": [
      "src/commands"
    ]
  },
  "semistandard": {
    "ignore": [
      "test/"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^28.1.4",
    "auto-changelog": "^2.4.0",
    "axios": "^0.27.2",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "fs-extra": "^10.0.0",
    "jest": "^28.1.2",
    "joi": "^17.6.0",
    "mock-fs": "^5.1.3",
    "semistandard": "^16.0.1",
    "showdown": "^2.1.0"
  }
}
