{
  "name": "antmarky",
  "version": "1.0.0-beta.2",
  "description": "Antmarky is a static-site generator for Asciidoctor based on Node.js and EJS",
  "type": "module",
  "main": "index.ts",
  "scripts": {
    "start": "rm -rf dist/ && tsx ./esbuild.config.ts -- development",
    "bundle": "rm -rf build/ && tsx ./esbuild.config.ts -- production",
    "build": "npm run bundle && node -e 'import(\"./build/index.js\")'",
    "lint": "semistandard",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "bump": "node bump-version.js",
    "changelog": "auto-changelog --handlebars-setup .changelog/helper.js --template .changelog/changelog-template.hbs --commit-limit false"
  },
  "engines": {
    "node": ">=16.7.0"
  },
  "author": "",
  "keywords": [],
  "license": "ISC",
  "devDependencies": {
    "@types/ejs": "^3.1.1",
    "@types/fs-extra": "^11.0.1",
    "@types/mock-fs": "^4.13.1",
    "@types/node": "^18.11.17",
    "@vitest/coverage-istanbul": "^0.34.6",
    "@vitest/ui": "^0.34.6",
    "auto-changelog": "^2.4.0",
    "ejs": "^3.1.6",
    "esbuild": "0.19.5",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.10",
    "mock-fs": "^5.1.2",
    "semistandard": "^16.0.1",
    "tsx": "^3.14.0",
    "vitest": "^0.34.6",
    "zod": "^3.22.4"
  },
  "dependencies": {
    "asciidoctor": "3.0.0",
    "commander": "^11.1.0"
  }
}