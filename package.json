{
  "name": "antmarky",
  "version": "1.0.0-beta.2",
  "description": "Antmarky is a static-site generator for Asciidoctor based on Node.js and Handlebars",
  "type": "module",
  "main": "./bin/index.cjs",
  "bin": {
    "antmarky": "./bin/index.cjs"
  },
  "scripts": {
    "start": "rm -rf bin/ && tsx ./esbuild.config.mjs -- development",
    "bundle": "tsx ./esbuild.config.mjs -- production",
    "build": "npm run bundle && node ./bin/index.cjs build",
    "build:dev": "npm run bundle && node ./bin/index.cjs serve",
    "lint": "semistandard",
    "test": "vitest",
    "bump": "node bump-version.js",
    "changelog": "auto-changelog --handlebars-setup .changelog/helper.js --template .changelog/changelog-template.hbs --commit-limit false"
  },
  "engines": {
    "node": ">=16.7.0"
  },
  "author": "",
  "keywords": [],
  "license": "ISC",
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/mock-fs": "^4.13.1",
    "@types/node": "^18.11.17",
    "@vitest/coverage-istanbul": "^0.34.6",
    "asciidoctor": "3.0.0",
    "auto-changelog": "^2.4.0",
    "esbuild": "^0.19.5",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.10",
    "handlebars": "^4.7.8",
    "mock-fs": "^5.1.2",
    "semistandard": "^16.0.1",
    "tsx": "^3.14.0",
    "vitest": "^0.34.6",
    "zod": "^3.22.4"
  },
  "dependencies": {
    "commander": "^11.1.0"
  }
}